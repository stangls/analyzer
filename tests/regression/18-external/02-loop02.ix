<ix version="1.0">

  <!--
    compared to 01-loop.ix
    we create more invariants at one location
    to see how Goblint can handle this.
  -->

  <!-- inside loop -->
  <invariant>
    <location>
      <line>13</line>
      <column>5</column>
    </location>
    <variable>
      <name>i</name>
      <type>signed int</type>
      <interval>
         <lower-bound>0</lower-bound>
         <upper-bound>9</upper-bound>
      </interval>
    </variable>
  </invariant>

  <!-- after loop -->
  <invariant>
    <location>
      <line>17</line>
      <column>3</column>
    </location>
    <variable>
      <name>i</name>
      <type>signed int</type>
      <interval>
         <lower-bound>10</lower-bound>
         <upper-bound>10</upper-bound>
      </interval>
    </variable>
    <variable>
      <name>j</name>
      <type>signed int</type>
      <interval>
         <lower-bound>7</lower-bound>
         <upper-bound>7</upper-bound>
      </interval>
    </variable>
  </invariant>

  <invariant>
    <location>
      <line>17</line>
      <column>3</column>
    </location>
    <variable>
      <name>k</name>
      <type>signed int</type>
      <interval>
         <lower-bound>5</lower-bound>
         <upper-bound>5</upper-bound>
      </interval>
    </variable>
  </invariant>

</ix>
